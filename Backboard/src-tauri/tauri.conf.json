{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "LovassyApp - Backboard",
        "version": "2.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "window": {
                "all": true
            },
            "globalShortcut": {
                "all": true
            },
            "dialog": {
                "all": true
            },
            "http": {
                "all": true,
                "scope": ["https://**", "http://**"]
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "me.lovassyapp.backboard",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "decorations": false,
                "fullscreen": false,
                "resizable": true,
                "title": "LovassyApp - Backboard",
                "width": 800,
                "height": 600,
                "minWidth": 600,
                "minHeight": 400
            }
        ]
    }
}
