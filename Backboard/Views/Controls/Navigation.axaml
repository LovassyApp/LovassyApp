<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Backboard.Views.Controls.Navigation">
    <Grid Margin="0,28,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" x:Name="NavigationMenuListBox" SelectionMode="Single,AlwaysSelected"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="{StaticResource Dark6}">
            <ListBoxItem>
                <TextBlock Text="Home" />
            </ListBoxItem>
            <ListBoxItem>
                <TextBlock Text="Settings" />
            </ListBoxItem>
        </ListBox>
        <ContentControl Grid.Column="1" />
    </Grid>
</UserControl>